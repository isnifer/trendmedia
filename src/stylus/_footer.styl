.footer

  &__wrapper
    text-align justify

    &:after
      display inline-block
      width 100%
      height 0
      content ""

  &__item
    display inline-block
    vertical-align top
    font-weight 700
    font-size (18/16)*1em
    text-align center
    margin-top 50px

    &:first-child
      margin-top 0

    p
      margin 0

      a
        color #000
        text-decoration none